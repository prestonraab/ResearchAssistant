{
  "name": "research-assistant",
  "displayName": "Research Assistant",
  "description": "Comprehensive literature review assistant for academic research",
  "version": "0.1.0",
  "license": "MIT",
  "publisher": "research-tools",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/research-assistant"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "researchAssistant.activate",
        "title": "Research Assistant: Activate"
      },
      {
        "command": "researchAssistant.refreshOutline",
        "title": "Refresh Outline",
        "icon": "$(refresh)"
      },
      {
        "command": "researchAssistant.refreshClaims",
        "title": "Refresh Claims",
        "icon": "$(refresh)"
      },
      {
        "command": "researchAssistant.showClaimsPanel",
        "title": "Research Assistant: Show Claims Panel"
      },
      {
        "command": "researchAssistant.analyzeCoverage",
        "title": "Research Assistant: Analyze Coverage"
      },
      {
        "command": "researchAssistant.showDashboard",
        "title": "Research Assistant: Show Dashboard"
      },
      {
        "command": "researchAssistant.runPerformanceBenchmarks",
        "title": "Research Assistant: Run Performance Benchmarks",
        "icon": "$(dashboard)"
      },
      {
        "command": "researchAssistant.exportPerformanceBenchmarks",
        "title": "Research Assistant: Export Performance Benchmarks",
        "icon": "$(export)"
      },
      {
        "command": "researchAssistant.searchPapersForSection",
        "title": "Search Papers",
        "icon": "$(search)"
      },
      {
        "command": "researchAssistant.viewClaimsForSection",
        "title": "View Claims",
        "icon": "$(list-unordered)"
      },
      {
        "command": "researchAssistant.analyzeGapForSection",
        "title": "Analyze Gap",
        "icon": "$(graph)"
      },
      {
        "command": "researchAssistant.bulkImport",
        "title": "Research Assistant: Bulk Import",
        "icon": "$(cloud-download)"
      },
      {
        "command": "researchAssistant.batchVerifyQuotes",
        "title": "Research Assistant: Batch Verify Quotes",
        "icon": "$(quote)"
      },
      {
        "command": "researchAssistant.exportCoverage",
        "title": "Research Assistant: Export Coverage Report"
      },
      {
        "command": "researchAssistant.searchAll",
        "title": "Research Assistant: Search All",
        "icon": "$(search)"
      },
      {
        "command": "researchAssistant.syncPDFsFromZotero",
        "title": "Research Assistant: Sync PDFs from Zotero",
        "icon": "$(cloud-download)"
      },
      {
        "command": "researchAssistant.extractPdf",
        "title": "Extract PDF Text",
        "icon": "$(file-text)"
      },
      {
        "command": "researchAssistant.findPapersForSelection",
        "title": "Find Papers for This",
        "icon": "$(search)"
      },
      {
        "command": "researchAssistant.quickExtractClaim",
        "title": "Quick Extract Claim",
        "icon": "$(add)"
      },
      {
        "command": "researchAssistant.verifyClaimQuote",
        "title": "Verify Quote",
        "icon": "$(check)"
      },
      {
        "command": "researchAssistant.verifyAllUnverified",
        "title": "Research Assistant: Verify All Unverified Quotes",
        "icon": "$(checklist)"
      },
      {
        "command": "researchAssistant.verifyAllClaims",
        "title": "Research Assistant: Verify All Claims",
        "icon": "$(checklist)"
      },
      {
        "command": "researchAssistant.validateClaimSupport",
        "title": "Validate Support",
        "icon": "$(symbol-misc)"
      },
      {
        "command": "researchAssistant.validateAllClaims",
        "title": "Research Assistant: Validate All Claims Support",
        "icon": "$(rock)"
      },
      {
        "command": "researchAssistant.flagWeakSupport",
        "title": "Research Assistant: Flag Claims with Weak Support",
        "icon": "$(warning)"
      },
      {
        "command": "researchAssistant.openWritingMode",
        "title": "Research Assistant: Open Writing Mode",
        "icon": "$(edit)"
      },
      {
        "command": "researchAssistant.openEditingMode",
        "title": "Research Assistant: Open Editing Mode",
        "icon": "$(pencil)"
      },
      {
        "command": "researchAssistant.openClaimReview",
        "title": "Research Assistant: Open Claim Review",
        "icon": "$(checklist)"
      },
      {
        "command": "researchAssistant.openClaimMatching",
        "title": "Research Assistant: Open Claim Matching",
        "icon": "$(search)"
      },
      {
        "command": "researchAssistant.exportManuscriptMarkdown",
        "title": "Research Assistant: Export Manuscript as Markdown",
        "icon": "$(file-code)"
      },
      {
        "command": "researchAssistant.exportManuscriptWord",
        "title": "Research Assistant: Export Manuscript as Word",
        "icon": "$(file-word)"
      },
      {
        "command": "researchAssistant.exportManuscriptLatex",
        "title": "Research Assistant: Export Manuscript as LaTeX",
        "icon": "$(file-code)"
      },
      {
        "command": "researchAssistant.markPaperUnread",
        "title": "Mark as Unread",
        "icon": "$(circle-outline)"
      },
      {
        "command": "researchAssistant.markPaperSomeRead",
        "title": "Mark as Partially Read",
        "icon": "$(circle-half-filled)"
      },
      {
        "command": "researchAssistant.markPaperSkimmed",
        "title": "Mark as Skimmed",
        "icon": "$(eye)"
      },
      {
        "command": "researchAssistant.markPaperRead",
        "title": "Mark as Read",
        "icon": "$(check)"
      },
      {
        "command": "researchAssistant.markPaperDeeplyRead",
        "title": "Mark as Deeply Read",
        "icon": "$(star-full)"
      },
      {
        "command": "researchAssistant.setPaperReadingStatus",
        "title": "Set Reading Status",
        "icon": "$(list-selection)"
      },
      {
        "command": "researchAssistant.showReadingStatistics",
        "title": "Research Assistant: Show Reading Statistics",
        "icon": "$(graph)"
      },
      {
        "command": "researchAssistant.importZoteroHighlights",
        "title": "Research Assistant: Import Highlights from Zotero",
        "icon": "$(cloud-download)"
      },
      {
        "command": "researchAssistant.syncZoteroHighlights",
        "title": "Research Assistant: Sync Zotero Highlights",
        "icon": "$(sync)"
      },
      {
        "command": "researchAssistant.jumpToPDF",
        "title": "Jump to PDF in Zotero",
        "icon": "$(link-external)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "researchAssistant",
          "title": "Research Assistant",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "researchAssistant": [
        {
          "id": "researchAssistant.outline",
          "name": "Outline & Coverage"
        },
        {
          "id": "researchAssistant.claims",
          "name": "Claims"
        },
        {
          "id": "researchAssistant.papers",
          "name": "Papers"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "researchAssistant.findPapersForSelection",
          "when": "editorHasSelection && resourceFilename == manuscript.md",
          "group": "researchAssistant@1"
        },
        {
          "command": "researchAssistant.quickExtractClaim",
          "when": "editorHasSelection && resourcePath =~ /ExtractedText/",
          "group": "researchAssistant@2"
        }
      ],
      "view/title": [
        {
          "command": "researchAssistant.activate",
          "when": "view == researchAssistant.outline",
          "group": "navigation@1"
        },
        {
          "command": "researchAssistant.openWritingMode",
          "when": "view == researchAssistant.outline",
          "group": "navigation@2"
        },
        {
          "command": "researchAssistant.openEditingMode",
          "when": "view == researchAssistant.outline",
          "group": "navigation@3"
        },
        {
          "command": "researchAssistant.refreshOutline",
          "when": "view == researchAssistant.outline",
          "group": "navigation@4"
        },
        {
          "command": "researchAssistant.refreshClaims",
          "when": "view == researchAssistant.claims",
          "group": "navigation@1"
        },
        {
          "command": "researchAssistant.batchVerifyQuotes",
          "when": "view == researchAssistant.claims",
          "group": "navigation@2"
        },
        {
          "command": "researchAssistant.validateAllClaims",
          "when": "view == researchAssistant.claims",
          "group": "navigation@3"
        },
        {
          "command": "researchAssistant.syncPDFsFromZotero",
          "when": "view == researchAssistant.papers",
          "group": "navigation@1"
        },
        {
          "command": "researchAssistant.importZoteroHighlights",
          "when": "view == researchAssistant.papers",
          "group": "navigation@1b"
        },
        {
          "command": "researchAssistant.syncZoteroHighlights",
          "when": "view == researchAssistant.papers",
          "group": "navigation@1c"
        },
        {
          "command": "researchAssistant.showReadingStatistics",
          "when": "view == researchAssistant.papers",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "researchAssistant.searchPapersForSection",
          "when": "view == researchAssistant.outline && viewItem == section",
          "group": "1_actions@1"
        },
        {
          "command": "researchAssistant.viewClaimsForSection",
          "when": "view == researchAssistant.outline && viewItem == section",
          "group": "1_actions@2"
        },
        {
          "command": "researchAssistant.analyzeGapForSection",
          "when": "view == researchAssistant.outline && viewItem == section",
          "group": "1_actions@3"
        },
        {
          "command": "researchAssistant.openClaimReview",
          "when": "view == researchAssistant.claims && viewItem == claim",
          "group": "1_open@1"
        },
        {
          "command": "researchAssistant.verifyClaimQuote",
          "when": "view == researchAssistant.claims && viewItem == claim",
          "group": "2_verification@1"
        },
        {
          "command": "researchAssistant.validateClaimSupport",
          "when": "view == researchAssistant.claims && viewItem == claim",
          "group": "2_verification@2"
        },
        {
          "command": "researchAssistant.extractPdf",
          "when": "view == researchAssistant.papers && viewItem == pdfNeedsExtraction",
          "group": "1_extraction@1"
        },
        {
          "command": "researchAssistant.setPaperReadingStatus",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@1"
        },
        {
          "command": "researchAssistant.markPaperUnread",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@2"
        },
        {
          "command": "researchAssistant.markPaperSomeRead",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@3"
        },
        {
          "command": "researchAssistant.markPaperSkimmed",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@4"
        },
        {
          "command": "researchAssistant.markPaperRead",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@5"
        },
        {
          "command": "researchAssistant.markPaperDeeplyRead",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "2_reading@6"
        },
        {
          "command": "researchAssistant.importZoteroHighlights",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "3_zotero@1"
        },
        {
          "command": "researchAssistant.jumpToPDF",
          "when": "view == researchAssistant.papers && (viewItem == pdfExtracted || viewItem == extractedOnly)",
          "group": "3_zotero@2"
        }
      ]
    },
    "keybindings": [
      {
        "command": "researchAssistant.openWritingMode",
        "key": "ctrl+alt+w",
        "mac": "cmd+alt+w"
      },
      {
        "command": "researchAssistant.openEditingMode",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "researchAssistant.openClaimReview",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "Research Assistant",
      "properties": {
        "researchAssistant.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for embeddings. Get one at https://platform.openai.com/api-keys",
          "markdownDescription": "OpenAI API key for embeddings. [Get one here](https://platform.openai.com/api-keys)"
        },
        "researchAssistant.embeddingModel": {
          "type": "string",
          "default": "text-embedding-3-small",
          "enum": [
            "text-embedding-3-small",
            "text-embedding-3-large",
            "text-embedding-ada-002"
          ],
          "description": "OpenAI embedding model to use"
        },
        "researchAssistant.outlinePath": {
          "type": "string",
          "default": "03_Drafting/outline.md",
          "description": "Relative path to the outline file from workspace root"
        },
        "researchAssistant.claimsDatabasePath": {
          "type": "string",
          "default": "01_Knowledge_Base/claims_and_evidence.md",
          "description": "Relative path to the claims database file from workspace root"
        },
        "researchAssistant.extractedTextPath": {
          "type": "string",
          "default": "literature/ExtractedText",
          "description": "Relative path to extracted text directory from workspace root"
        },
        "researchAssistant.coverageThresholds": {
          "type": "object",
          "default": {
            "low": 3,
            "moderate": 6,
            "strong": 7
          },
          "description": "Thresholds for coverage levels (none: 0, low: 1-3, moderate: 4-6, strong: 7+)"
        },
        "researchAssistant.embeddingCacheSize": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of embeddings to cache in memory. Reduced from 1000 to optimize memory usage. Each embedding uses ~3KB, so 100 items = ~300KB in-memory cache."
        },
        "researchAssistant.mcpCacheTTL": {
          "type": "number",
          "default": 300000,
          "description": "MCP cache time-to-live in milliseconds (default: 5 minutes)"
        },
        "researchAssistant.enableMemoryMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable memory usage monitoring and automatic cleanup"
        },
        "researchAssistant.defaultMode": {
          "type": "string",
          "default": "writing",
          "enum": [
            "writing",
            "editing",
            "review"
          ],
          "description": "Default mode to open when activating Research Assistant"
        },
        "researchAssistant.autoSaveInterval": {
          "type": "number",
          "default": 2000,
          "description": "Auto-save interval in milliseconds"
        },
        "researchAssistant.sentenceParsingStrategy": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "aggressive",
            "conservative"
          ],
          "description": "Strategy for parsing sentences from manuscript"
        },
        "researchAssistant.claimMatchingThreshold": {
          "type": "number",
          "default": 0.7,
          "description": "Minimum similarity threshold for claim matching (0-1)"
        },
        "researchAssistant.zoteroUserId": {
          "type": "string",
          "default": "",
          "description": "Zotero User ID for accessing your library. Get it from https://www.zotero.org/settings/keys",
          "markdownDescription": "Zotero User ID for accessing your library. [Get it here](https://www.zotero.org/settings/keys)"
        },
        "researchAssistant.zoteroApiKey": {
          "type": "string",
          "default": "",
          "description": "Zotero API key (optional, for private libraries). Get it from https://www.zotero.org/settings/keys",
          "markdownDescription": "Zotero API key (optional, for private libraries). [Get it here](https://www.zotero.org/settings/keys)"
        },
        "researchAssistant.autoActivate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically activate Research Assistant when a research workspace is detected"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run compile && npm run bundle",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "bundle": "NODE_OPTIONS='--max-old-space-size=4096' esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --tree-shaking=true",
    "bundle:watch": "npm run bundle -- --watch",
    "test": "NODE_OPTIONS='--max-old-space-size=4096 --experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "clean": "rm -rf out dist"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@research-assistant/core": "*",
    "docx": "^9.5.1",
    "openai": "^4.0.0",
    "punycode": "^2.3.1",
    "vectra": "^0.12.3"
  }
}
